<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 align="center">BMI Calculator</h2>
      <br>
      <div class="well text-center">

        <%= form_for :bmi, url: 'bmi/calculate', html: {class: 'form-horizontal'} do %>
            <div class="form-group">
              <label for="weight_kg">Weight (kg):</label>
              <input type="number" name="bmi[weight]"
                     id="weight_kg"
                     placeholder="weight in kg" class="form-control" required>
            </div>

            <div class="form-group">
              <label for="height_cm">Height (cm):</label>
              <input type="number" name="bmi[height]"
                     id="height_cm"
                     placeholder="height in cm" class="form-control" required>
            </div>
            <% if $bmi %>
                <h2><%= $bmi %></h2>
            <% else %>
                <h3 class="text-muted">Calculated BMI</h3>
            <% end %>

            <input type="submit" name="Calculate" value="Calculate" />
        <% end %>
      </div>

    </div>
  </div>
</div>