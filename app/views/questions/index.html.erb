<br>
<div class="container">
  <% @questions.each do |q| %>
      <div class="lead well">
        <div class="media">
          <div class="media-left">
            <a href="#">
              <img class="media-object" src="<%= q.gravatar %>">
            </a>
          </div>
          <div class="media-body">
            <h3 class="media-heading"><%= q.email %> asked:</h3>
            <div>
              <small>
                <%= time_ago_in_words q.created_at %> ago
              </small>
            </div>
            <%= q.body %>
            <div>
              <a href="<%= question_path(q) %>" class="btn btn-success btn-xs">View Answers</a>
            </div>
            <% if user_signed_in? && current_user.email == 'tersl.adam@seznam.cz' %>
                <div>
                  <button class="btn btn-warning btn-xs"><%= link_to 'Destroy', q, method: :delete, data: {confirm: 'Are you sure?'} %></button>
                </div>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
  <% if @questions.empty? %>
      <div class="alert alert-info">Nothing here yet, be the first one to ask :)</div>
  <% end %>
</div>
